@{
	Layout = "~/Views/EmailTemplate/_Layout.cshtml";
	ViewBag.Title = "Nouvelle commande a été modifié";
}


<table border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 600px;">
	<tbody>
	<tr>
		<td bgcolor="#ffffff" align="left" style="padding: 0px 30px 20px 30px; color: #666666; font-family: 'Lato', Helvetica, Arial, sans-serif; font-size: 18px; font-weight: 400; line-height: 25px;">
			<p style="margin: 0;">Bonjour,</p>
			<p>
				La commande <b>@Model.OrderNumber</b> a été modifiée par @Model.Username , L'email de confirmation a envoyé à client.
			</p>
		</td>
	</tr>
	</tbody>
</table>